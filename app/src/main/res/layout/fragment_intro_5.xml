<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.binitshah.medfieldtv.intro_5"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/networktitle"
        android:text="@string/network"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/greyText"
        android:paddingTop="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verizonbtn"
                android:src="@drawable/veri"
                android:background="#b30101"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:clickable="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comcastbtn"
                android:layout_gravity="center"
                android:src="@drawable/coma"
                android:background="#000000"
                android:elevation="10dp"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>


</LinearLayout>
